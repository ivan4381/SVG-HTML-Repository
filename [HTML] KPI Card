LocationKPI_Card = 
VAR _actual = 565468
VAR _target = 658536



-- Dynamic scaling
VAR _scale_base = IF(_actual > _target, _actual * 1.15, _target)
VAR _actual_pct = DIVIDE(_actual, _scale_base)
VAR _target_pct = DIVIDE(_target, _scale_base)

VAR _actual_pct_css = FORMAT(_actual_pct * 100, "0.00") & "%"
VAR _target_pct_css = FORMAT(_target_pct * 100, "0.00") & "%"

-- Formatting values
VAR _formatted_actual = FORMAT(_actual, "#,##0")
VAR _formatted_target = FORMAT(_target, "#,##0")
VAR _diff = _actual - _target
VAR _diff_text = FORMAT(_diff, "+#,##0;-#,##0;0")
VAR _variance_pct = FORMAT(DIVIDE(_diff, _target) * 100, "+0.1%;-0.1%;0.0%")

-- Status logic
VAR _performance_status =
    IF(
        _actual >= _target, "exceeded",
        IF(_actual >= _target * 0.8, "on-track", "behind")
    )

VAR _status_color = SWITCH(
    _performance_status,
    "exceeded", "#059669",
    "on-track", "#0891B2",
    "behind", "#DC2626"
)

VAR _fill_gradient = SWITCH(
    _performance_status,
    "exceeded", "linear-gradient(135deg, #10B981 0%, #059669 50%, #047857 100%)",
    "on-track", "linear-gradient(135deg, #0EA5E9 0%, #0284C7 50%, #0369A1 100%)",
    "behind", "linear-gradient(135deg, #F59E0B 0%, #D97706 50%, #B45309 100%)"
)

VAR _status_bg = SWITCH(
    _performance_status,
    "exceeded", "#ECFDF5",
    "on-track", "#F0F9FF",
    "behind", "#FEF3C7"
)

VAR _status_text = SWITCH(
    _performance_status,
    "exceeded", "ðŸŽ‰ TARGET EXCEEDED",
    "on-track", "ðŸ“ˆ ON TRACK",
    "behind", "âš¡ NEEDS FOCUS"
)

RETURN
